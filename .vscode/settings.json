{
  "editor.inlayHints.enabled": "on",
  // Do not ignore node_modules css files, which is ignored by default

  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "tailwindcss",
    "*.json": "jsonc"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "tailwindcss",
    "astro": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.files.exclude": ["**/node_modules/**", "**/dist/**"],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "class:list",
    "tw",
    "twx"
  ],
  "emmet.includeLanguages": {
    "plaintext": "tailwindcss",
    "astro": "html",
    "postcss": "css",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "vue-html": "html",
    "svelte": "html",
    "preact": "html",
    "lit": "html",
    "css": "css"
  },
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "warning",
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.validate": true,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.classFunctions": ["tw", "clsx"],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact"
  ],
  // add support for autocomplete in JS or JS like files
  /**
   * This setting controls whether inlay hints are enabled in the editor.
   * Inlay hints are small pieces of information displayed inline with the code,
   * providing additional context or details about the code.
   *
   * Possible values:
   * - "off": Inlay hints are disabled.
   * - "on": Inlay hints are enabled.
   */

  "terminal.integrated.fastScrollSensitivity": 2,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.cursorBlinking": true,
  "search.exclude": {
    "**/dist/**": true,
    "**/.next/**": true,
    "**/.astro/**": true,
    "**/.turbo/**": true,
    "**/.vercel/**": true,
    "**/coverage/**": true,
    "./pnpm-lock.yaml": true,
    "**/.svelte-kit/**": true
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },

  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "/Users/mikeconnor/.local/share/mise/shims/node"
  }
}
