{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "declaration": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      // "@components/*": [
      //   "src/components/*"
      // ],
      "@cc/*": [
        "src/astro-custom-layout-components/*"
      ]
      // "@layouts/*": [
      //   "src/layouts/*"
      // ],
      // "@content/*": [
      //   "src/content/*"
      // ],
      // "@assets/*": [
      //   "src/assets/*"
      // ],
      // "@styles/*": [
      //   "src/styles/*"
      // ],
      // "@scripts/*": [
      //   "src/scripts/*"
      // ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*.astro",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}