{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "declaration": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@cc/*": [
        "src/astro-custom-layout-components/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*.*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/**/_*.*",
    "src/components/_Icon.tsx",
    "src/pages/demo/modal-demo.astro"
  ]
}