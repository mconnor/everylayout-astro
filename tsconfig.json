{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "declaration": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@cc/*": [
        "src/astro-custom-layout-components/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*.astro",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/**/_*.*"
  ]
}