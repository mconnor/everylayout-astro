{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "rootDir": ".",
    "experimentalDecorators": true, // default is false for TypeScript 5.0 and up
    "useDefineForClassFields": false, // default is true when "target" is "ES2022" or higher
    "strictNullChecks": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "files": [".astro/types.d.ts"],
  "include": [
    "src/**/*.astro",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.md",
    "*.config.mjs"
  ],
  "exclude": [".vercel", ".astro", "dist", "my-custom-cache-directory"]
}
