---
import './Stack.css'
import type { RmUnitType } from '../Types'
type Props = {
    space?: RmUnitType //"var(--s1)"
    recursive?: boolean //false
    splitAfter?: number // no default. The element after which to split the stack with an auto margin
}
const props = Astro.props
---

<stack-l {...props}>
    <slot />
</stack-l>

<script src="./Stack.ts"></script>
