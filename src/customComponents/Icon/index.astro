---
import './Icon.css'
import type { RmUnitType } from '../Types'

interface Props {
  label?: string //Turns the element into an image in assistive technologies and adds an aria-label of the value
  space?: RmUnitType //The space between the text and the icon. If null, natural word spacing is preserved
}

const { space, label } = Astro.props
---

<icon-l space={space} label={label}>
  <slot />
</icon-l>

<script src="./Icon.js"></script>
