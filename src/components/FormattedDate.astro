---
import { Box } from '#astro-custom-layout-components/index.ts';
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<Box borderWidth="0" padding="0"
  ><time datetime={date.toISOString()}>
    {
      date.toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })
    }
  </time></Box
>

<style>
  time {
    font-size: 0.8em;
    color: #666;
  }
</style>
