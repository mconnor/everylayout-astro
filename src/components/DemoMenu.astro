---
import { layoutDemoPages } from '#lib/getPages.ts';
---

<wa-dropdown>
  <wa-button slot="trigger" caret>Layout Demos</wa-button>
  {
    layoutDemoPages.map((page) => (
      <wa-menu-item>
        <a href={page.url}>{page.url?.slice(1)}</a>
      </wa-menu-item>
    ))
  }
</wa-dropdown>
