---
import './Grid.css';

import type { RmUnitType } from '../Types.ts';

interface Props {
  min?: RmUnitType; //"250px"
  space?: RmUnitType; //"var(--s1)"
  children: unknown;
}

const { min, space } = Astro.props;
---

<grid-l min={min} space={space}>
  <slot />
</grid-l>

<script src="./Grid.js"></script>
