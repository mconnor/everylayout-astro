---
import './Cover.css';

import type { RmUnitType } from '../Types';

interface Props {
  centeredElement?: string; // h1
  space?: RmUnitType; //"var(--s1)"
  minHeight?: RmUnitType; //"100vh"
  noPad?: boolean; // false
  children: unknown;
}

const { centeredElement: centered, ...rest } = Astro.props;
---

<cover-l centered={centered} {...rest}>
  <slot />
</cover-l>

<script src="./Cover.js"></script>
