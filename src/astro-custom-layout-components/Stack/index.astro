---
import './Stack.css';

import type { RmUnitType } from '../Types';
interface Props {
  space?: RmUnitType; //"var(--s1)"
  recursive?: boolean; //false
  splitAfter?: number; // no default. The element after which to split the stack with an auto margin
}
const { space = 'var(--s1)', recursive = false, splitAfter } = Astro.props;
---

<stack-l space={space} recursive={recursive} splitAfter={splitAfter}>
  <slot />
</stack-l>

<script src="./Stack.js"></script>
